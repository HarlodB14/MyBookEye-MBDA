        android:fillColor="#FF888888"
        android:pathData="M30,40 L90,40 L90,45 L30,45 Z" />
    <path
        android:fillColor="#FF888888"
        android:pathData="M30,60 L80,60 L80,65 L30,65 Z" />
    <path
        android:fillColor="#FF888888"
        android:pathData="M30,80 L70,80 L70,85 L30,85 Z" />

    <!-- Author line -->
    <path
        android:fillColor="#FF888888"
        android:pathData="M30,120 L60,120 L60,125 L30,125 Z" />

    <!-- Decorative elements -->
    <path
        android:fillColor="#FFAAAAAA"
        android:pathData="M90,140 Q100,130 110,140 T90,160 Z" />
